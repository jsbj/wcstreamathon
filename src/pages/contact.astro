---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import FormHero from '../components/blocks/hero/ContactHero.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'
import ContactCards from '../components/blocks/contact/ContactCards.astro'
import SocialProof from '../components/blocks/socialproof/Basic.astro'

// Content
// - SEO
const SEO = {
	title: 'The Weather & Climate Livestrea, | Get in Touch with Us',
	description:
		'Contact the Weather & Climate Livestream organizers.'
}
// - Page Header
const header = {
	title: 'Contact the organizers.',
	text: "The organizers are Jonah Bloch-Johnson, Marc Alessi, Andrew Williams, Nick Lutsko, Henri Drake, Miriam Nielsen, and some anonymous members of the meteorology and climate science community. We're looking for more organizers, so write to us if you would like to join!"
}
---

<Layout title={SEO.title} description={SEO.description}>
	<FormHero
		title={header.title}
		text={header.text}
		id="contact"
		classes="bg-neutral-950/80 dark:bg-neutral-950/80"
	/>
